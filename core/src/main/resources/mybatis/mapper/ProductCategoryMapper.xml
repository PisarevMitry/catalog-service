<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mirea.homedepot.catalogservice.core.repository.ProductCategoryRepository">

    <resultMap id="ProductCategoryEntity"
               type="com.mirea.homedepot.catalogservice.core.model.entity.ProductCategoryEntity" autoMapping="true">
        <id property="id" column="id" jdbcType="BIGINT"/>
    </resultMap>

    <select id="findAll" resultMap="ProductCategoryEntity">
        SELECT *
        FROM product_category;
    </select>

    <select id="findById" resultMap="ProductCategoryEntity">
        SELECT *
        FROM product_category
        WHERE id = #{productCategoryId, jdbcType=BIGINT};
    </select>

    <select id="findByListId" resultMap="ProductCategoryEntity">
        <bind name="" value=""/>
        SELECT *
        FROM product_category
        <choose>
            <when test="productCategoryListId.isEmpty()">
                ORDER BY id DESC
                LIMIT 10;
            </when>
            <otherwise>
                WHERE id IN
                <foreach collection='productCategoryListId' item='id' open='(' separator=',' close=')'>
                    #{id, jdbcType=BIGINT}
                </foreach>
            </otherwise>
        </choose>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO product_category (id, title, parent_id)
        VALUES (#{title}, #{parent_id});
    </insert>

    <insert id="insertAll" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO product_category (id, title, parent_id) VALUES
        <foreach collection="productCategoryEntityList" item="productCategoryEntity" separator=",">
            (#{productCategoryEntity.title}, #{productCategoryEntity.parent_id})
        </foreach>
    </insert>

    <update id="updateById" parameterType="com.mirea.homedepot.catalogservice.core.model.entity.ProductCategoryEntity">
        UPDATE product_category SET
        <if test="title != null">
            title = #{title},
        </if>
        <if test="parentId != null">
            parent_id = #{parentId},
        </if>
        WHERE id = #{id};
    </update>

    <delete id="deleteById">
        DELETE
        FROM product_category
        WHERE id = #{productCategoryId};
    </delete>

</mapper>