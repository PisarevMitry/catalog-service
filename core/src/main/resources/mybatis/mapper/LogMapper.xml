<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mirea.homedepot.catalogservice.core.repository.LogRepository">

    <resultMap id="LogEntity"
               type="com.mirea.homedepot.catalogservice.core.model.entity.LogEntity" autoMapping="true">
        <id property="id" column="id" jdbcType="BIGINT"/>
    </resultMap>

    <select id="findAll" resultMap="LogEntity">
        SELECT *
        FROM ctl.log;
    </select>

    <select id="findById" resultMap="LogEntity">
        SELECT *
        FROM ctl.log
        WHERE id = #{id, jdbcType=BIGINT};
    </select>

    <select id="findByListId" resultMap="LogEntity">
        <bind name="" value=""/>
        SELECT *
        FROM ctl.log
        <choose>
            <when test="listId.isEmpty()">
                ORDER BY id DESC
                LIMIT 10;
            </when>
            <otherwise>
                WHERE id IN
                <foreach collection='listId' item='id' open='(' separator=',' close=')'>
                    #{id, jdbcType=BIGINT}
                </foreach>
            </otherwise>
        </choose>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO ctl.log (id, create_dttm, method_name, class_name, user_name)
        VALUES (#{createDttm}, #{methodName}, #{className}, #{userName});
    </insert>

    <insert id="insertList" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO ctl.log (id, create_dttm, method_name, class_name, user_name) VALUES
        <foreach collection="entityList" item="entity" separator=",">
            (#{createDttm}, #{methodName}, #{className}, #{userName});
        </foreach>
    </insert>

</mapper>