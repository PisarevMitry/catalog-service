<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mirea.homedepot.catalogservice.core.repository.ProductRepository">

    <resultMap id="ProductEntity" type="com.mirea.homedepot.catalogservice.core.model.entity.ProductEntity" autoMapping="true">
        <id property="id" column="id" jdbcType="BIGINT"/>
    </resultMap>

    <select id="findAll" resultMap="ProductEntity">
        SELECT *
        FROM log;
    </select>

    <select id="findById" resultMap="ProductEntity">
        SELECT *
        FROM log
        WHERE id = #{log.id, jdbcType=BIGINT};
    </select>

    <select id="findByListId" resultMap="ProductEntity">
        <bind name="" value=""/>
        SELECT id, contact_id, country_id, city, index, street, building, flat
        FROM address
        <choose>
            <otherwise>
                WHERE id IN
                <foreach collection='addressListId' item='id' open='(' separator=',' close=')'>
                    #{id, jdbcType=BIGINT}
                </foreach>
            </otherwise>
        </choose>
    </select>

    <insert id="insert" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO log (id, create_dttm, method_name, class_name, user_name)
        VALUES (#{createDttm}, #{methodName}, #{className}, #{userName});
    </insert>

    <insert id="insertAll" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        INSERT INTO address (contact_id, country_id, city, index, street, building, flat) VALUES
        <foreach collection="addressList" item="address" separator=",">
            (#{address.contactId}, #{address.countryId}, #{address.city},
            #{address.index}, #{address.street}, #{address.building}, #{address.flat})
        </foreach>
    </insert>

    <update id="updateById" parameterType="com.mirea.homedepot.catalogservice.core.model.entity.ProductEntity">
        UPDATE address SET
        <if test="medicalCardId != null">
            contact_id = #{contactId}
        </if>
        <if test="typeId != null">
            country_id = #{countryId},
        </if>
        <if test="heaviness != null">
            city = #{city},
        </if>
        <if test="heaviness != null">
            index = #{index},
        </if>
        <if test="heaviness != null">
            street = #{street},
        </if>
        <if test="heaviness != null">
            building = #{building},
        </if>
        <if test="heaviness != null">
            flat = #{flat},
        </if>
        WHERE id = #{id};
    </update>

    <delete id="deleteById">
        DELETE
        FROM address
        WHERE id = #{addressId};
    </delete>
</mapper>